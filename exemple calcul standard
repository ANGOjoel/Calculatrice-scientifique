            erreur = 1;
    }

    // Affichage du rÃ©sultat si aucune erreur
    if (!erreur) {
        printf("RÃ©sultat : %.2f %c %.2f = %.2f\n", a, operateur, b, resultat);
    }
}

int main() {
    double a, b;
    char operateur;
    int lectureValide;

    printf("Calculatrice simple\n");
    printf("Entrez une opÃ©ration sous la forme : nombre1 opÃ©rateur nombre2 (ex : 5 + 3)\n");

    while (1) {
        printf("\nEntrÃ©e : ");
        lectureValide = scanf("%lf %c %lf", &a, &operateur, &b);

        // VÃ©rifier si l'entrÃ©e est correcte
