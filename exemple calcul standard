            printf("Erreur : entrÃ©e invalide. Veuillez entrer une opÃ©ration valide.\n");
            // Vider le buffer pour Ã©viter une boucle infinie
            while (getchar() != '\n');
            continue;
        }

        // Appeler la fonction pour afficher le rÃ©sultat
        afficherResultat(a, operateur, b);

        // Demander si l'utilisateur veut continuer
        char choix;
        printf("Voulez-vous effectuer un autre calcul ? (o/n) : ");
        scanf(" %c", &choix);
        if (tolower(choix) != 'o') {
            break;
        }
    }

    printf("Merci d'avoir utilisÃ© la calculatrice !\n");
    return 0;
}
