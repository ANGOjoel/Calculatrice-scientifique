void afficherResultat(double a, char operateur, double b) {
    double resultat;
    int erreur = 0;

    // Calcul en fonction de l'opÃ©rateur
    switch (operateur) {
        case '+':
            resultat = a + b;
            break;
        case '-':
            resultat = a - b;
            break;
        case '*':
            resultat = a * b;
            break;
        case '/':
            if (b != 0) {
